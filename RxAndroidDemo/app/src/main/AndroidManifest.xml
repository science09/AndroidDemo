<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.science09.apple.rxandroiddemo">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SimpleActivity"
            android:label="@string/title_activity_simple"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".MoreActivity"
            android:label="@string/title_activity_more"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".LambdaActivity"
            android:label="@string/title_activity_lambda"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".NetworkActivity"
            android:label="@string/title_activity_network"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SafeActivity"
            android:label="@string/title_activity_safe"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".NetworkDetailActivity"
            android:label="@string/title_activity_network_detail"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".RxBindActivity"
            android:label="@string/title_activity_network_detail"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>
